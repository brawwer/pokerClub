@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager



<form style="margin-top: 120px" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">

    <div class="login-box">
        <h4 style="color: #000000">LOG IN</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="Email" class="login-form-fields" placeholder="Email" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="Password" class="login-form-fields" placeholder="Password" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
   <!--      <div class="form-group">
                <div class="checkbox">
                   <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label> 
                </div>  
        </div>   -->
        <div>
                <button type="submit" class="login-btn">Log in</button>
        </div>
        <hr />
        <p>
            <a asp-action="Register" class="login-tools" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
        </p>
  <!--       <p>
            <a asp-action="ForgotPassword" class="login-tools">Forgot your password?</a>
        </p>  -->
    </div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
</form>
